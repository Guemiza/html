apiVersion: apps/v1
kind: Deployment
metadata:
  name: app-django
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: app-django
  template:
    metadata:
      labels:
        app: app-django
    spec:
      containers:
      - name: app-django
        image: amelgm/project-adminlocallibrary:v2
        ports:
        - containerPort: 8000
---
apiVersion: v1
kind: Service
metadata:
  name: app-django-service
  namespace: default  # Assurez-vous que le namespace est correctement spécifié ici
spec:
  selector:
    app: app-django
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8000
  type: NodePort

